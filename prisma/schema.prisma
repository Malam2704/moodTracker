// Define your data model here
model User {
  id       String   @id @map("_id") @default(auto()) @test.Unique
  name     String
  email    String   @unique
  posts    Post[]
}

model Post {
  id        String   @id @map("_id") @default(auto()) @test.Unique
  title     String
  content   String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}
